<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BrowserTheme" parent="@android:style/Theme.Material">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarSize">64.0dip</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>
    <style name="DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:popupBackground">#fffafafa</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="ActionBarStyle" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>
    <style name="Suggestions" parent="@android:style/Widget.Material.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
    </style>
</resources>
